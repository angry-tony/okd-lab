version: '3'

services:

  artifactory:
    image: docker.bintray.io/jfrog/artifactory-oss:{{ okd_lab_artifactory_version }}
    restart: always
    logging:
      driver: json-file
      options:
        max-size: "50m"
        max-file: "10"
    ulimits:
      nproc: 65535
      nofile:
        soft: 32000
        hard: 40000
    environment:
    - EXTRA_JAVA_OPTIONS=-Xms512m -Xmx2g
    - JF_ROUTER_ENTRYPOINTS_EXTERNALPORT=7777
    ports:
      - 7777:7777
      - 7776:8081
    volumes:
      - '~/docker/mounts/artifactory:/var/opt/jfrog/artifactory'
      - '/etc/localtime:/etc/localtime:ro'
